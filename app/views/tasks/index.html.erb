<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <div>
    <li><%= link_to task.title, task_path(task) %> <%= link_to 'Delete', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} %></li>
  </div>
  <% end %>
  <br>
  <div>
  <%= link_to "Add new task",  new_task_path%>
  </div>
</ul>
